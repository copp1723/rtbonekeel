{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts", // If you have a top-level 'tests' folder
    "*.ts"           // For root-level .ts files like vitest.config.ts
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend/",
    "coverage/"
    // We don't exclude .test.ts or vitest.setup.ts here
  ]
}
